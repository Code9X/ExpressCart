@model CompanyVM

<div class="card shadow border-0 my-4">
	<div class="card-header bg-secondary bg-gradient ml-0 py-3">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="text-white py-2">@(Model.Company.Id != 0 ? "Update " : "Create ") Company</h2>
			</div>
		</div>
	</div>
	<div class="card-body p-4">
		<form method="post" class="row" enctype="multipart/form-data">
			<input asp-for="Company.Id" hidden />
			<div class="row">

				<div class="col-10">
					<div class="border p-3">
						<div class="form-floating py-1 col-12">
							<input asp-for="Company.Name" class="form-control border-0 shadow" />
							<label asp-for="Company.Name" class="ms-2"></label>
							<span asp-validation-for="Company.Name" class="text-danger"></span>
						</div>
						<div class="form-floating py-1 col-12">
							<select asp-for="Company.CategoryID" asp-items="@Model.CategoryList" class="form-select border-0 shadow">
								<option disabled selected>--Select Category--</option>
							</select>
							<label asp-for="Company.CategoryID" class="ms-2">Category</label>
							<span asp-validation-for="Company.CategoryID" class="text-danger"></span>
						</div>
						<div class="form-floating py-1 col-12">
							<select asp-for="Company.SubCategoryID" asp-items="@Model.SubCategoryList" class="form-select border-0 shadow">
								<option disabled selected>--Select SubCategory--</option>
							</select>
							<label asp-for="Company.SubCategoryID" class="ms-2">Sub-Category</label>
							<span asp-validation-for="Company.SubCategoryID" class="text-danger"></span>
						</div>
						<div class="form-floating py-1 col-12">
							<input asp-for="Company.Address" class="form-control border-0 shadow" />
							<label asp-for="Company.Address" class="ms-2"></label>
							<span asp-validation-for="Company.Address" class="text-danger"></span>
						</div>
						<div class="form-floating py-1 col-12">
							<input asp-for="Company.DisplayOrder" class="form-control border-0 shadow" />
							<label asp-for="Company.DisplayOrder" class="ms-2"></label>
							<span asp-validation-for="Company.DisplayOrder" class="text-danger"></span>
						</div>
						<div class="row pt-2">
							<div class="col-6 col-md-3">
								@if (Model.Company.Id != 0)
								{
									<button type="submit" class="btn btn-secondary form-control">Update</button>
								}
								else
								{
									<button type="submit" class="btn btn-secondary form-control">Create</button>
								}
							</div>
							<div class="col-6 col-md-3">
								<a asp-controller="Company" asp-action="Index" class="btn btn-outline-primary border form-control">Back to List</a>
							</div>
						</div>
					</div>
				</div>
			</div>
		</form>
	</div>
</div>
